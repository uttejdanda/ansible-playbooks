---
- hosts: dev
  connection: ssh
  tasks:
    - name: "this is used for debug module"
      command: git -v
      register: git

    - name: "checking the system up and running"
      shell: uptime
      register: uptime

    - name: "it is used to display the uptime"
      debug:
        msg: "this is my ansible system up and running from {{uptime.stdout}} and checking the git version {{git.stdout}}"
